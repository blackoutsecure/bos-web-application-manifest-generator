{
  "name": "bos-web-application-manifest-generator",
  "version": "1.0.1",
  "private": true,
  "description": "Generate W3C-compliant web manifest files for Progressive Web Apps with full customization",
  "author": "Blackout Secure <https://github.com/blackoutsecure>",
  "main": "dist/index.js",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blackoutsecure/bos-web-application-manifest-generator.git"
  },
  "bugs": {
    "url": "https://github.com/blackoutsecure/bos-web-application-manifest-generator/issues"
  },
  "homepage": "https://github.com/blackoutsecure/bos-web-application-manifest-generator#readme",
  "keywords": [
    "github-action",
    "web-manifest",
    "site-webmanifest",
    "pwa",
    "progressive-web-app",
    "w3c",
    "web-app-manifest",
    "manifest-json",
    "installable-web-app",
    "blackout-secure",
    "automation"
  ],
  "scripts": {
    "build": "ncc build src/index.js -o dist",
    "prebuild": "npm run validate",
    "clean": "node test/cli.js clean",
    "prepare": "npm run build",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "test": "mocha",
    "test:watch": "mocha --watch",
    "pretest": "npm run build",
    "coverage": "nyc npm test",
    "coverage:check": "nyc --reporter=html --reporter=text npm test",
    "coverage:ci": "nyc --reporter=lcov npm test",
    "validate": "npm run lint:check && npm run format:check",
    "verify": "npm run validate && npm run test",
    "ver": "node src/lib/version.js",
    "ver:get": "node src/lib/version.js get",
    "ver:set": "node src/lib/version.js set",
    "ver:patch": "node src/lib/version.js patch",
    "ver:minor": "node src/lib/version.js minor",
    "ver:major": "node src/lib/version.js major",
    "release": "node src/lib/release.js"
  },
  "dependencies": {
    "@actions/artifact": "^2.1.2",
    "@actions/core": "^1.11.1",
    "glob": "^10.3.10",
    "node-html-parser": "^6.1.12",
    "sitemap": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@vercel/ncc": "^0.38.1",
    "chai": "^4.5.0",
    "eslint": "^9.12.0",
    "mocha": "^10.8.2",
    "nyc": "^17.1.0",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=20"
  },
  "nyc": {
    "exclude": [
      "test/**",
      "dist/**",
      "node_modules/**",
      "eslint.config.js"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "all": true,
    "check-coverage": false,
    "branches": 70,
    "lines": 70,
    "functions": 70,
    "statements": 70
  }
}
